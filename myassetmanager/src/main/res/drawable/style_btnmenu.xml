<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle"
            android:thickness="2dp"
            >
            <solid
                android:color="#ffdddddd" />
            <stroke
                android:width="2dp"
                android:color="#ffdddddd" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#98000000" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>