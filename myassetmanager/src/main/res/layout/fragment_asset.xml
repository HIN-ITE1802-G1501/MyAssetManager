<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="no.hin.student.myassetmanager.Fragments.FragmentAsset">
    <ImageView
        android:src="@drawable/laptop"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewEquipmentFragment"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrer nytt lån"
        android:onClick="onClickLoanButton"
        android:id="@+id/buttonEquipmentLoan"
        android:layout_below="@+id/textViewEquipmentStatusLabel"
        android:layout_toRightOf="@+id/imageViewEquipmentFragment"
        android:layout_toEndOf="@+id/imageViewEquipmentFragment"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Utstyrsinformasjon"
        android:textSize="22dp"
        android:textColor="#50A7B3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewEquipmentFragment"
        android:layout_toEndOf="@+id/imageViewEquipmentFragment"
        android:id="@+id/textViewEquipmentInfoLabel"/>

    <View
        android:id="@+id/view"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#728C93"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/imageViewEquipmentFragment"
        android:layout_toRightOf="@+id/imageViewEquipmentFragment"
        android:layout_below="@+id/buttonEquipmentLoan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textViewEquipmentBrand"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Microsoft"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:textColor="#696969"
        android:layout_below="@+id/textViewEquipmentInfoLabel"
        android:layout_toRightOf="@+id/textViewEquipmentModelLabel"
        android:layout_toEndOf="@+id/textViewEquipmentModelLabel"/>

    <TextView
        android:id="@+id/textViewEquipmentModel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Modell"
        android:textSize="16dp"
        android:textColor="#6D6D6D"
        android:layout_alignTop="@+id/textViewEquipmentModelLabel"
        android:layout_alignLeft="@+id/textViewEquipmentBrand"
        android:layout_alignStart="@+id/textViewEquipmentBrand"/>

    <TextView
        android:id="@+id/textViewEquipmentId"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="id"
        android:textSize="16dp"
        android:textColor="#6D6D6D"
        android:layout_alignTop="@+id/textViewEquipmentIdLabel"
        android:layout_alignLeft="@+id/textViewEquipmentModel"
        android:layout_alignStart="@+id/textViewEquipmentModel"/>

    <TextView
        android:id="@+id/textViewEquipmentHistoryLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Lånhistorikk"
        android:textSize="22dp"
        android:textColor="#50A7B3"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"/>

    <ListView
        android:id="@+id/listViewEquipmentHistory"
        android:layout_below="@+id/textViewEquipmentHistoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Merke:"
        android:id="@+id/textViewEquipmentBrandLabel"
        android:layout_below="@+id/textViewEquipmentInfoLabel"
        android:layout_toRightOf="@+id/imageViewEquipmentFragment"
        android:layout_toEndOf="@+id/imageViewEquipmentFragment"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Modell:"
        android:layout_marginTop="5dp"
        android:id="@+id/textViewEquipmentModelLabel"
        android:layout_below="@+id/textViewEquipmentBrandLabel"
        android:layout_toRightOf="@+id/imageViewEquipmentFragment"
        android:layout_toEndOf="@+id/imageViewEquipmentFragment"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Id:"
        android:layout_marginTop="5dp"
        android:id="@+id/textViewEquipmentIdLabel"
        android:layout_below="@+id/textViewEquipmentModel"
        android:layout_toRightOf="@+id/imageViewEquipmentFragment"
        android:layout_toEndOf="@+id/imageViewEquipmentFragment"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Status:"
        android:layout_marginTop="5dp"
        android:id="@+id/textViewEquipmentStatusLabel"
        android:layout_below="@+id/textViewEquipmentIdLabel"
        android:layout_toRightOf="@+id/imageViewEquipmentFragment"
        android:layout_toEndOf="@+id/imageViewEquipmentFragment"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textViewEquipmentStatus"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="status"
        android:textSize="16dp"
        android:textColor="#6D6D6D"
        android:layout_alignTop="@+id/textViewEquipmentStatusLabel"
        android:layout_alignLeft="@+id/textViewEquipmentId"
        android:layout_alignStart="@+id/textViewEquipmentId"/>

</RelativeLayout>