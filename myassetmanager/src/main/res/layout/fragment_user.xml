<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <HorizontalScrollView
                android:id="@+id/hori_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </HorizontalScrollView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxHeight="96dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp">
                    <ImageView
                        android:src="@drawable/user"
                        android:adjustViewBounds="true"
                        android:maxHeight="200dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Brukerinformasjon"
                        android:textSize="20dp"
                        android:textColor="#50A7B3"
                        android:layout_marginBottom="5dp"/>
                    <View
                        android:layout_marginBottom="5dp"
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#728C93"/>

                    <TextView
                        android:id="@+id/tvUserFullName"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Fornavn Etternavn"
                        android:textSize="20dp"
                        android:textColor="#696969"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Brukernavn"
                        android:textSize="20dp"
                        android:textColor="#6D6D6D"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/tvUserPhoneNumber"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="+47 917 55 967"
                        android:textSize="20dp"
                        android:textColor="#6D6D6D"
                        android:layout_marginBottom="5dp"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="0.40">
                    </LinearLayout>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#728C93"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Historie"
                        android:textSize="20dp"
                        android:textColor="#50A7B3"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <ListView
                        android:id="@+id/lvUserHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>