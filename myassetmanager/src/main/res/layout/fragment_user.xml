<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="no.hin.student.myassetmanager.Fragments.FragmentAccountSettings">
    <ImageView
        android:src="@drawable/user"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView"/>

    <Button
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:text="Registrer nytt lån"
        android:layout_marginTop="5dp"
        android:id="@+id/buttonUserRegisterLoan"
        android:layout_below="@+id/tvUserPhoneNumber"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Brukerinformasjon"
        android:textSize="22dp"
        android:textColor="#50A7B3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:id="@+id/textView2"/>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#728C93"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view"/>

    <TextView
        android:id="@+id/tvUserFullName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Fornavn Etternavn"
        android:textSize="16dp"
        android:textColor="#696969"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Brukernavn"
        android:textSize="16dp"
        android:textColor="#6D6D6D"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvUserFullName"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:id="@+id/tvUserPhoneNumber"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="+47 917 55 967"
        android:textSize="16dp"
        android:textColor="#6D6D6D"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvUserName"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:id="@+id/textViewUserHistoryLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Lånhistorikk"
        android:textSize="22dp"
        android:textColor="#50A7B3"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUserHistoryLabel">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lvUserHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>